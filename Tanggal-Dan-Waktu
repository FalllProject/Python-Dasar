# Tanggal dan waktu (latihan)

impor  datetime  sebagai  dt

print ( "Silahkan masukan tanggal, \n bulan dan tahun lahir anda \n " )
tanggal  =  int ( input ( "Tanggal \t : " ))
bulan  =  int ( input ( "Bulan \t \t : " ))
tahun  =  int ( input ( "Tahun \t \t : " ))

tanggal_lahir  =  dt . tanggal ( tahun , bulan , tanggal )
print ( f"Tanggal lahir anda adalah : { tanggal_lahir } " )

hari_ini  =  dt . tanggal . hari ini ()
print ( f"Hari ini tanggal: { hari_ini } " )
umur_hari  =  hari_ini  -  tanggal_lahir
umur_tahun  =  umur_hari . hari  //  365
umur_bulan_sisa  = ( umur_hari . hari  %  365 ) //  30

print ( f"Hari nya adalah : { tanggal_lahir :%A } " )
print ( f"Umur anda adalah: { umur_tahun } tahun, { umur_bulan_sisa } bulan" )
